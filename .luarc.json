{
  "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
  "runtime": {
    "version": "LuaJIT"
  },
  "diagnostics": {
    "globals": ["describe", "it", "before_each", "after_each", "assert"]
  },
  "workspace": {
    "library": [
      "${3rd}/luv/library",
      "$VIMRUNTIME/lua"
    ],
    "checkThirdParty": false
  }
}
